

<div class="jumbotron">
  <div class="container">
    <div class="well well-sm">
  <div class="form-group">
      <% if @current_user %>
      <h2>Hello <%= @current_user.firstname %>!</h2>
        <form action="/sessions" method="post">
          <input type='hidden' name='_method' value='delete'>
          <button type="submit"class="btn btn-default btn-lg">Sign out</button>
        </form>
      <% else %>
      <h2>Hello Guest!</h2>
        <form action="/sign-in" method="get">
          <button type="submit"class="btn btn-default btn-lg">Sign in</button>
        </form>
        <form action="/sign-up" method="get">
          <button type="submit"class="btn btn-default btn-lg">Sign up</button>
        </form>
      <% end %>
        <form action="/spaces" method="get">
          <button type="submit"class="btn btn-default btn-lg">View spaces</button>
        </form>
      </div>
    </div>
  </div>
</div>
