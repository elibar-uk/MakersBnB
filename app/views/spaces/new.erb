<div class='container'>
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 sign-up-content sign-back text-center">
      <h2>Add your new space</h2>
      <form action="/spaces/new" method="post">
        <div class="form-group">
          <label for="name">Name of your space</label>
          <input type="text" name="name" class="form-control" required>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" name="description" class="form-control" required>
        </div>

        <div class="form-group">
          <label for="price">Price per night (Â£)</label>
          <input type="text" name="price" class="form-control" required>
        </div>

        <div class="form-group">
          <label for="image">Add image URL</label>
          <input type="text" name="image" class="form-control">
        </div>

        <div class="form-group">
          <label for="start_date">Available from:</label>
          <input type='date' name='start_date' min='<%= DateTime.now.to_date %>' required>
        </div>

        <div class="form-group">
          <label for="end_date">Available until:</label>
          <input type='date' name='end_date' min='<%= DateTime.now.to_date %>' required>
        </div>

        <input type="submit" value="Add space" class="btn">
      </form>

    </div>
  </div>
</div>
